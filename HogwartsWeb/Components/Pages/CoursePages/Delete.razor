@page "/courses/delete"
@using Microsoft.EntityFrameworkCore
@using Hogwarts
@inject IDbContextFactory<HogwartsWeb.Data.HogwartsWebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete Course</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <hr />
    @if (course is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Course Name</dt>
            <dd class="col-sm-10">@course.CourseName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@course.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Professor</dt>
            <dd class="col-sm-10">@course.Professor.FirstName @course.Professor.LastName</dd>
        </dl>
        <EditForm method="post" Model="course" OnValidSubmit="DeleteCourse" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(course is null)">Delete</button> |
            <a href="/courses">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Course? course;

    [SupplyParameterFromQuery]
    private int CourseId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        course = await context.Course.FirstOrDefaultAsync(m => m.CourseId == CourseId);
        context.Professor.ToList();

        if (course is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteCourse()
    {
        using var context = DbFactory.CreateDbContext();
        context.Course.Remove(course!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/courses");
    }
}
